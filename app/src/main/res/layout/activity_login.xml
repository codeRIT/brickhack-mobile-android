<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navyDenim">

    <ImageView
        android:id="@+id/iv_bhlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="60dp"
        android:contentDescription="@string/brickhack_logo"
        android:src="@drawable/hack_logo_v6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_bhlogo"
        android:layout_alignStart="@+id/iv_bhlogo"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="63dp"
        android:lines="2"
        android:textSize="36sp"
        android:textColor="@color/cream"
        android:textStyle="bold"
        android:text="@string/title_login" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cream">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:background="@color/orange"
            android:shadowColor="@color/orange"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="10dp"
            android:text="@string/btn_login"/>

    </RelativeLayout>


</RelativeLayout>